<h1 class="text-center"><%= @cocktail.name %></h1>
<div class="text-right">
  <%= link_to "Add Dose", new_cocktail_dose_path(@cocktail) %>
</div>
<% @doses.each_with_index do |dose, index| %>
  <div class="bg-success flex-box" style="padding: 10px 20px; margin: 5px 0">
    <div>
      <strong><%= index + 1 %></strong> - <%= dose.description %> of <em><%= dose.ingredient.name %></em>
    </div>
    <div>
      <%= link_to "<i class='fa fa-trash' aria-hidden='true'></i>".html_safe, dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } %>
    </div>
  </div>
<% end %>

<%= link_to "Back to Cocktails", cocktails_path, class: "btn btn-success btn-xs" %>
<%= link_to "Delete Cocktail", cocktail_path(@cocktail), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-xs" %>
